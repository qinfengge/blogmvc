    <servlet-name>TagServlet</servlet-name>
    <url-pattern>/tag</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CommentServlet</servlet-name>
    <servlet-class>com.lza.servlet.CommentServlet</servlet-class>
  </servlet>
